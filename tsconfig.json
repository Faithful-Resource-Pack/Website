{
	"extends": "./.svelte-kit/tsconfig.json",
	"compilerOptions": {
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true,
		"baseUrl": ".",
		"paths": {
			"$src": [
				"src/"
			],
			"$lib":[
				"src/lib"
			],
			"$lib/*":[
				"src/lib/*"
			],
            "$components/*":[
                "src/components/*"
            ]
		},
		"rootDirs": [
			"."
		],
	},
    "exclude": [
        "./src/routes/layout.svelte"
    ]
}